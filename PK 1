<script>
function cekJawaban() {
  var kunci = {
    q1: "C", // 2000
    q2: "C", // 13
    q3: "B", // 18
    q4: "C", // 62
    q5: "D"  // 4
    // q6-q10 bisa ditambahkan
  };

  var score = 0;
  for (var key in kunci) {
    var jawaban = document.querySelector('input[name="'+key+'"]:checked');
    if (jawaban && jawaban.value === kunci[key]) {
      score += 5; // tiap soal benar 5 poin
    }
  }
  document.getElementById("hasil").innerHTML = "Skor Kamu: " + score;
}
</script>

